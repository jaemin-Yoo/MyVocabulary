<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/edit_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_many_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#000"
            android:fontFamily="@font/scdream9"
            android:text="한꺼번에\n단어추가"/>
    </LinearLayout>

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:fontFamily="@font/scdream5"
        android:text="1. 단어와 뜻을 '/'로 구분하세요.\n2. 단어 간 '줄바꿈'으로 구분하세요.
        \nex)\nsynchronize/동기화하다\nrepresentation/직원,대표자"/>

    <EditText
        android:id="@+id/edit_many_word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:gravity="top"
        android:background="@drawable/stroke"/>

</LinearLayout>